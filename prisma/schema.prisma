generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  clerkUserId String @unique
  email String @unique
  name String?
  imageUrl String?
  role String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt


}
model Lot {
  id          Int          @id @default(autoincrement())
  lotName     String
  type        String
  totalStones Int
  totalCts    Float
  source      String
 createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  origin      String
  notes       String?
  RoughCrystals RoughCrystal[]
}

model RoughCrystal {
  id          Int          @id @default(autoincrement())
  resourceNumber String     @unique
  roughWeight Float
  color       String
  clarity     String
  fluor       String
  stones      String
  lotId       Int
  lot         Lot          @relation(fields: [lotId], references: [id])
  options     Option[]
   createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Option {
  id          Int          @id @default(autoincrement())
  roughCrystalId Int
  roughCrystal RoughCrystal @relation(fields: [roughCrystalId], references: [id])
  estProgram  String
  estShape    String
  estColor    String
  estClarity  String
  estFluor    String
  estPrice    Float
  estList     Float
  estDiscount Float
  selected    Boolean
  diamonds    Diamond[]
}

model Diamond {
  id             Int     @id @default(autoincrement())
  optionId       Int
  option         Option  @relation(fields: [optionId], references: [id])
  estimatedWeight Float
  estimatedColor  String
  estimatedClarity String
  estimatedProgram String
  estDiscount     Float
  location        String
  isPolished      Boolean
  inventory       String
  giaNumber       String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}